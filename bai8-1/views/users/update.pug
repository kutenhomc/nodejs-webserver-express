h2 Update users

if dataDetail
ul
 each x in dataDetail
  li Tên:
   span(style="font-weight: 600; color: #333; margin-left: 5px") #{x.name}
  li age:
   span(style="color: #333; margin-left: 5px") #{x.age}
  h3 Edit
  form(action="/users/update/" + x.id, method="POST")
    label Tên  
    input(type="text", name="nameAdd")
    br
    label tuổi
    input(type="text", name="ageAdd")
    br
    button submit edit


a(href="/users") Go back